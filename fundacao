<script>
    function gerarCampos() {
        const qtd = parseInt(document.getElementById('qtd_sapatas').value);
        const container = document.getElementById('formulario_sapatas');
        container.innerHTML = ""; 

        if (isNaN(qtd) || qtd < 1) {
            alert("Informe uma quantidade v√°lida.");
            return;
        }

        for (let i = 1; i <= qtd; i++) {
            const card = document.createElement('div');
            card.className = 'sapata-input-card';
            card.setAttribute('data-label', `Dados da Sapata ${i}`);
            
            card.innerHTML = `
                <div><label>Base A (m)</label><input type="number" class="baseA" step="0.01" value="1.00"></div>
                <div><label>Base B (m)</label><input type="number" class="baseB" step="0.01" value="1.00"></div>
                <div><label>Topo a (m)</label><input type="number" class="topoA" step="0.01" value="0.20"></div>
                <div><label>Topo b (m)</label><input type="number" class="topoB" step="0.01" value="0.20"></div>
                <div><label>Rodap√© h0 (m)</label><input type="number" class="h0" step="0.01" value="0.20"></div>
                <div><label>Alt. Total H (m)</label><input type="number" class="H" step="0.01" value="0.50"></div>
            `;
            container.appendChild(card);
        }
        document.getElementById('btnCalcular').style.display = 'block';
    }

    function calcularTudo() {
        const baseA = document.querySelectorAll('.baseA');
        const baseB = document.querySelectorAll('.baseB');
        const topoA = document.querySelectorAll('.topoA');
        const topoB = document.querySelectorAll('.topoB');
        const h0_vals = document.querySelectorAll('.h0');
        const H_vals = document.querySelectorAll('.H');
        
        let volTotalAcumulado = 0;
        let areaTotalAcumulada = 0;
        let memorialHTML = "";
        
        const corpoTabela = document.getElementById('corpoTabela');
        corpoTabela.innerHTML = "";

        for (let i = 0; i < baseA.length; i++) {
            const A = parseFloat(baseA[i].value);
            const B = parseFloat(baseB[i].value);
            const a = parseFloat(topoA[i].value);
            const b = parseFloat(topoB[i].value);
            const h0 = parseFloat(h0_vals[i].value);
            const H = parseFloat(H_vals[i].value);

            if ([A, B, a, b, h0, H].some(isNaN)) continue;

            const h_piramidal = H - h0;
            const s1 = A * B;
            const s2 = a * b;

            // Volume (Prisma + Tronco)
            const v_unit = (s1 * h0) + ((h_piramidal / 3) * (s1 + s2 + Math.sqrt(s1 * s2)));
            volTotalAcumulado += v_unit;

            // √Årea de Forma (Rodap√© + Trap√©zios laterais)
            const areaRodape = 2 * (A + B) * h0;
            const apotemaA = Math.sqrt(Math.pow(h_piramidal, 2) + Math.pow((B - b) / 2, 2));
            const apotemaB = Math.sqrt(Math.pow(h_piramidal, 2) + Math.pow((A - a) / 2, 2));
            const areaInclinada = ((A + a) * apotemaA) + ((B + b) * apotemaB);
            const areaFormaUnit = areaRodape + areaInclinada;
            areaTotalAcumulada += areaFormaUnit;

            // Alimenta o memorial
            memorialHTML += `<div><strong>Sapata ${i+1}:</strong> Base ${A}x${B}m | Topo ${a}x${b}m | h0:${h0}m | H:${H}m</div>`;

            // Tabela
            corpoTabela.innerHTML += `
                <tr>
                    <td>Sapata ${i+1}</td>
                    <td>${A.toFixed(2)}x${B.toFixed(2)}</td>
                    <td>${a.toFixed(2)}x${b.toFixed(2)}</td>
                    <td>${h0.toFixed(2)}m</td>
                    <td>${H.toFixed(2)}m</td>
                    <td>${areaFormaUnit.toFixed(2)}</td>
                    <td>${v_unit.toFixed(3)}</td>
                </tr>
            `;
        }

        document.getElementById('memorialTexto').innerHTML = memorialHTML;
        document.getElementById('volTotalGeral').innerText = volTotalAcumulado.toFixed(3);
        document.getElementById('areaTotalGeral').innerText = areaTotalAcumulada.toFixed(2);
        document.getElementById('resultadoArea').style.display = 'block';
        window.scrollTo({ top: document.getElementById('resultadoArea').offsetTop, behavior: 'smooth' });
    }

    function exportarCSV() {
        let csv = "Sapata;Base;Topo;h0;H;Area Forma (m2);Volume (m3)\n";
        document.querySelectorAll("#corpoTabela tr").forEach(row => {
            let rowData = [];
            row.querySelectorAll("td").forEach(col => rowData.push(col.innerText.replace(".", ",")));
            csv += rowData.join(";") + "\n";
        });
        const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
        const link = document.createElement("a");
        link.href = URL.createObjectURL(blob);
        link.download = "projeto_sapatas_2026.csv";
        link.click();
    }
</script>

